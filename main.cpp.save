#include "TXRIP.h"
#include "person.h"


int main()
{
    txCreateWindow(WINDOWX, WINDOWY);
    Karta karta_t;
    Person person_t;
    txSetFillColor(TX_BLACK);
    txClear();
    person_t.init_karta(&karta_t);
    karta_t.init();
    person_t.norm_xny(karta_t.get_width(),karta_t.get_scalex(),karta_t.get_height());
    person_t.set_pers();
    while(!GetAsyncKeyState(VK_ESCAPE))
    {
        karta_t.draw();
        person_t.draw();
        person_t.update();
        txSleep(150);
    }
    return 0;
}
